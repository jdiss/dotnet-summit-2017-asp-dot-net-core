@model System.Collections.Generic.ICollection<SampleApplication.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<a asp-action="Create">New</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Age</td>
            <td>
                <form class="inline" asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
            </td>
        </tr>     
    }
    </tbody>
</table>